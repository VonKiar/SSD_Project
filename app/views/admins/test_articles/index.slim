.row
  .col-12
    h1 This is test articles list

.row.mt-2
  .col
    table.table.table-bordered.table-striped.table-hover
      thead.thead-dark
        tr
          th ID
          th Title
          th Body
          th No. Comments
          th Created at
          th Updated at
          th Action
      tbody
        - @articles.each do |a|
          - cache a do
            tr
              td = a.id
              td.font-weight-bold = a.title
              td = a.body
              td = a.comments.count
              td.font-weight-light = "#{time_ago_in_words(a.created_at)} Ago"
              td.font-weight-light = "#{time_ago_in_words(a.updated_at)} Ago"
              td
                span
                  = link_to admins_article_path(a) do
                    i.fas.fa-eye
                span.ml-3
                  = link_to edit_admins_article_path(a) do
                    i.fas.fa-pen
                span.ml-3
                  = link_to admins_article_path(a), method: :delete, data: { confirm: "Are you sure?" } do
                    i.fas.fa-trash